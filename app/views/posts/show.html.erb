<div class="post-container">
  <div class="mb-4">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
        <li class="breadcrumb-item"><%= link_to "Posts", posts_path %></li>
        <li class="breadcrumb-item active" aria-current="page"><%= truncate(@post.title, length: 30) %></li>
      </ol>
    </nav>
  </div>

  <article class="post-full mb-5">
    <div class="post-header mb-4">
      <h1 class="post-title mb-3"><%= @post.title %></h1>
      <div class="post-meta d-flex justify-content-between align-items-center">
        <div class="author-info">
          <div class="d-flex align-items-center">
            <div class="avatar bg-primary text-white rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
              <%= @post.user.username[0].upcase %>
            </div>
            <div>
              <%= link_to @post.user.username, user_path(@post.user), class: "fw-bold text-decoration-none" %>
              <div class="text-muted small">
                <i class="far fa-calendar-alt me-1"></i> <%= @post.created_at.strftime("%b %d, %Y") %>
              </div>
            </div>
          </div>
        </div>
        <div class="category-tags">
          <% if @post.categories.any? %>
            <% @post.categories.each do |category| %>
              <%= link_to category.name, category_path(category), class: "badge rounded-pill bg-secondary text-decoration-none me-1" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="post-content mb-4">
      <div class="card shadow-sm border-0">
        <div class="card-body p-4">
          <%= simple_format(@post.content, class: "mb-0") %>
        </div>
      </div>
    </div>

    <% if current_user?(@post.user) || current_user&.admin? %>
      <div class="post-actions mb-5">
        <%= link_to edit_post_path(@post), class: "btn btn-outline-primary me-2" do %>
          <i class="fas fa-edit me-1"></i> Edit
        <% end %>
        <%= link_to post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "btn btn-outline-danger" do %>
          <i class="fas fa-trash-alt me-1"></i> Delete
        <% end %>
      </div>
    <% end %>
  </article>

  <div class="comments-section">
    <div class="card shadow-sm border-0">
      <div class="card-header bg-white">
        <h3 class="h5 mb-0">Comments (<%= @post.comments.count %>)</h3>
      </div>
      <div class="card-body">
        <% if logged_in? %>
          <div class="comment-form mb-4">
            <h4 class="h6 mb-3">Add a comment</h4>
            <%= form_with(model: [@post, @comment], local: true) do |f| %>
              <div class="mb-3">
                <%= f.text_area :content, rows: 3, class: 'form-control', placeholder: 'Write your comment here...' %>
              </div>
              <%= f.submit "Post Comment", class: "btn btn-primary" %>
            <% end %>
          </div>
        <% else %>
          <div class="alert alert-light text-center mb-4">
            <p class="mb-0">
              <%= link_to "Log in", login_path, class: "fw-bold" %> to add a comment.
            </p>
          </div>
        <% end %>

        <% if @comments.any? %>
          <div class="comments-list">
            <% @comments.each do |comment| %>
              <div class="comment mb-4">
                <div class="d-flex">
                  <div class="avatar bg-light text-dark rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; min-width: 40px;">
                    <%= comment.user.username[0].upcase %>
                  </div>
                  <div class="comment-body bg-light rounded p-3 w-100">
                    <div class="comment-header d-flex justify-content-between mb-2">
                      <div>
                        <span class="fw-bold"><%= link_to comment.user.username, user_path(comment.user), class: "text-decoration-none" %></span>
                        <small class="text-muted ms-2"><%= time_ago_in_words(comment.created_at) %> ago</small>
                      </div>
                      <% if current_user?(comment.user) || current_user&.admin? %>
                        <div class="dropdown">
                          <button class="btn btn-sm text-muted" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v"></i>
                          </button>
                          <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                              <%= link_to edit_post_comment_path(comment.post, comment), class: "dropdown-item" do %>
                                <i class="fas fa-edit me-2"></i> Edit
                              <% end %>
                            </li>
                            <li>
                              <%= button_to post_comment_path(comment.post, comment), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "dropdown-item text-danger border-0 bg-transparent w-100 text-start" do %>
                                <i class="fas fa-trash-alt me-2"></i> Delete
                              <% end %>
                            </li>
                          </ul>
                        </div>
                      <% end %>
                    </div>
                    <div class="comment-content">
                      <%= simple_format(comment.content, class: "mb-0") %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-4">
            <i class="far fa-comment-dots fa-2x text-muted mb-2"></i>
            <p class="text-muted mb-0">No comments yet. Be the first to comment!</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>