<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card shadow border-0 rounded-3">
      <div class="card-header bg-gradient text-white text-center py-3">
        <h1 class="card-title h4 mb-0">Create your account</h1>
      </div>
      <div class="card-body p-4">
        <%= form_with(model: @user, local: true) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <div class="form-floating mb-3">
            <%= f.text_field :username, class: 'form-control', placeholder: "Username", id: "floatingUsername" %>
            <%= f.label :username, for: "floatingUsername" %>
          </div>

          <div class="form-floating mb-3">
            <%= f.email_field :email, class: 'form-control', placeholder: "Email", id: "floatingEmail" %>
            <%= f.label :email, for: "floatingEmail" %>
          </div>

          <div class="form-floating mb-3">
            <%= f.password_field :password, class: 'form-control', placeholder: "Password", id: "floatingPassword" %>
            <%= f.label :password, for: "floatingPassword" %>
          </div>

          <div class="form-floating mb-4">
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm Password", id: "floatingConfirmation" %>
            <%= f.label :password_confirmation, "Confirm Password", for: "floatingConfirmation" %>
          </div>

          <%= f.submit "Create Account", class: "btn btn-primary w-100 py-2 mb-3" %>
        <% end %>

        <div class="text-center">
          <p class="mb-0">Already have an account? <%= link_to "Log in", login_path, class: "fw-semibold" %></p>
        </div>
      </div>
    </div>
  </div>
</div>