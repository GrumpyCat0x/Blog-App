<div class="row">
  <div class="col-lg-4 mb-4">
    <div class="card shadow-sm border-0 h-100">
      <div class="card-body text-center p-4">
        <div class="user-avatar bg-primary text-white mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 100px; height: 100px; border-radius: 50%;">
          <span style="font-size: 3rem;"><%= @user.username[0].upcase %></span>
        </div>
        <h2 class="user-name h4 mb-1"><%= @user.username %></h2>
        <p class="text-muted mb-3"><%= @user.full_name %></p>

        <% if @user.profile.present? && @user.profile.bio.present? %>
          <div class="user-bio text-start mb-3">
            <h6 class="text-muted small text-uppercase mb-2">About</h6>
            <p><%= simple_format(@user.profile.bio) %></p>
          </div>
        <% end %>

        <% if current_user?(@user) %>
          <div class="mt-3">
            <%= link_to edit_user_profile_path(@user), class: "btn btn-outline-primary btn-sm w-100" do %>
              <i class="fas fa-user-edit me-1"></i> Edit Profile
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="card-footer bg-white border-0 pt-0 pb-4">
        <div class="row text-center user-stats">
          <div class="col">
            <div class="stat-value fw-bold"><%= @user.posts.count %></div>
            <div class="stat-label text-muted small">Posts</div>
          </div>
          <div class="col">
            <div class="stat-value fw-bold"><%= @user.comments.count %></div>
            <div class="stat-label text-muted small">Comments</div>
          </div>
          <div class="col">
            <div class="stat-value fw-bold"><%= @user.created_at.strftime("%b %Y") %></div>
            <div class="stat-label text-muted small">Joined</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-8">
    <div class="card shadow-sm border-0">
      <div class="card-header d-flex justify-content-between align-items-center bg-white">
        <h3 class="h5 mb-0">Posts</h3>
        <% if current_user?(@user) %>
          <%= link_to new_post_path, class: "btn btn-sm btn-primary" do %>
            <i class="fas fa-plus-circle me-1"></i> New Post
          <% end %>
        <% end %>
      </div>
      <div class="card-body p-0">
        <% if @posts.any? %>
          <div class="list-group list-group-flush">
            <% @posts.each do |post| %>
              <div class="list-group-item border-start-0 border-end-0 py-4">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <h4 class="h6 mb-0"><%= link_to post.title, post_path(post), class: "text-decoration-none" %></h4>
                  <small class="text-muted"><%= time_ago_in_words(post.created_at) %> ago</small>
                </div>
                <p class="text-muted mb-2 text-truncate-2"><%= truncate(post.content, length: 150) %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <% if post.categories.any? %>
                      <% post.categories.take(2).each do |category| %>
                        <%= link_to category.name, category_path(category), class: "badge rounded-pill bg-secondary text-decoration-none me-1" %>
                      <% end %>
                      <% if post.categories.count > 2 %>
                        <span class="badge rounded-pill bg-light text-dark">+<%= post.categories.count - 2 %></span>
                      <% end %>
                    <% end %>
                  </div>
                  <small class="text-muted">
                    <i class="far fa-comment me-1"></i><%= post.comments.count %>
                  </small>
                </div>
              </div>
            <% end %>
          </div>

          <div class="pagination-container p-3">
            <%= will_paginate @posts, class: 'pagination justify-content-center' %>
          </div>
        <% else %>
          <div class="text-center p-5">
            <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
            <p class="text-muted mb-0">No posts found.</p>
            <% if current_user?(@user) %>
              <%= link_to "Create Your First Post", new_post_path, class: "btn btn-primary mt-3" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
