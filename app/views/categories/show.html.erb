<div class="category-header mb-4">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
      <li class="breadcrumb-item"><%= link_to "Categories", categories_path %></li>
      <li class="breadcrumb-item active" aria-current="page"><%= @category.name %></li>
    </ol>
  </nav>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <% icon = case @category.name.downcase
              when 'technology' then 'laptop-code'
              when 'travel' then 'plane-departure'
              when 'food' then 'utensils'
              when 'lifestyle' then 'leaf'
              when 'health' then 'heartbeat'
              when 'business' then 'briefcase'
              when 'entertainment' then 'film'
              when 'education' then 'graduation-cap'
              when 'sports' then 'running'
              when 'politics' then 'landmark'
              else 'tag' end %>
    <h1 class="h3"><i class="fas fa-<%= icon %> me-2 text-primary"></i><%= @category.name %></h1>

    <% if current_user&.admin? %>
      <div class="admin-actions">
        <%= link_to edit_category_path(@category), class: "btn btn-outline-secondary me-2" do %>
          <i class="fas fa-edit me-1"></i> Edit
        <% end %>
        <%= link_to category_path(@category), method: :delete, data: { confirm: "Are you sure you want to delete this category?" }, class: "btn btn-outline-danger" do %>
          <i class="fas fa-trash-alt me-1"></i> Delete
        <% end %>
      </div>
    <% end %>
  </div>

  <% if @category.description.present? %>
    <div class="category-description mb-4">
      <div class="card bg-light border-0">
        <div class="card-body">
          <p class="mb-0"><%= @category.description %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="category-posts">
  <h2 class="h4 mb-3">Posts in this category</h2>

  <% if @posts.any? %>
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card post-card h-100 border-0 shadow-sm">
            <div class="card-body">
              <h2 class="card-title h5 mb-2"><%= link_to post.title, post_path(post), class: "text-decoration-none stretched-link" %></h2>
              <div class="post-meta text-muted mb-2">
                <small>
                  <i class="fas fa-user me-1"></i> <%= link_to post.user.username, user_path(post.user), class: "text-muted" %>
                  <span class="mx-1">â€¢</span>
                  <i class="far fa-clock me-1"></i> <%= time_ago_in_words(post.created_at) %> ago
                </small>
              </div>
              <p class="card-text text-truncate-3"><%= truncate(post.content, length: 120) %></p>
            </div>
            <div class="card-footer bg-transparent border-top-0 pt-0">
              <div class="d-flex justify-content-between">
                <div>
                  <% post.categories.reject { |c| c.id == @category.id }.take(2).each do |category| %>
                    <%= link_to category.name, category_path(category), class: "badge rounded-pill bg-secondary text-decoration-none me-1" %>
                  <% end %>
                </div>
                <small class="text-muted">
                  <i class="far fa-comment me-1"></i><%= post.comments.count %>
                </small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="pagination-container mt-4">
      <%= will_paginate @posts, class: 'pagination justify-content-center' %>
    </div>
  <% else %>
    <div class="text-center p-5 bg-light rounded">
      <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
      <h3>No posts in this category yet.</h3>
      <p class="text-muted">Be the first to add a post to this category!</p>
      <% if logged_in? %>
        <%= link_to "Create Post", new_post_path, class: "btn btn-primary mt-2" %>
      <% end %>
    </div>
  <% end %>
</div>