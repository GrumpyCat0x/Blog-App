<%= form_with(model: @category, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter category name" %>
  </div>

  <div class="mb-4">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, rows: 5, class: 'form-control', placeholder: "Provide a description for this category" %>
  </div>

  <div class="d-flex justify-content-between">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", categories_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>