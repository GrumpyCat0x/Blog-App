<div class="card shadow-sm border-0">
  <div class="card-header bg-white d-flex justify-content-between align-items-center">
    <h1 class="h4 mb-0">Profile</h1>
    <% if current_user?(@user) %>
      <%= link_to edit_user_profile_path(@user), class: "btn btn-outline-primary" do %>
        <i class="fas fa-user-edit me-1"></i> Edit Profile
      <% end %>
    <% end %>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-md-4 mb-4 mb-md-0">
        <div class="text-center mb-4">
          <div class="user-avatar bg-primary text-white mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 120px; height: 120px; border-radius: 50%;">
            <span style="font-size: 3.5rem;"><%= @user.username[0].upcase %></span>
          </div>
          <h2 class="h4 mb-0"><%= @user.username %></h2>
          <% if @profile.first_name.present? || @profile.last_name.present? %>
            <p class="text-muted"><%= @user.full_name %></p>
          <% end %>
        </div>

        <div class="profile-info">
          <div class="info-item d-flex align-items-center mb-3">
            <div class="icon-box bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
              <i class="fas fa-envelope text-primary"></i>
            </div>
            <div>
              <p class="text-muted small mb-0">Email</p>
              <p class="mb-0"><%= @user.email %></p>
            </div>
          </div>

          <% if @profile.date_of_birth.present? %>
            <div class="info-item d-flex align-items-center mb-3">
              <div class="icon-box bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                <i class="fas fa-birthday-cake text-primary"></i>
              </div>
              <div>
                <p class="text-muted small mb-0">Date of Birth</p>
                <p class="mb-0"><%= @profile.date_of_birth.strftime("%B %d, %Y") %></p>
              </div>
            </div>
          <% end %>

          <div class="info-item d-flex align-items-center mb-3">
            <div class="icon-box bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
              <i class="fas fa-calendar-alt text-primary"></i>
            </div>
            <div>
              <p class="text-muted small mb-0">Joined</p>
              <p class="mb-0"><%= @user.created_at.strftime("%B %d, %Y") %></p>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-8">
        <div class="bio-section mb-4">
          <h3 class="h5 mb-3">Bio</h3>
          <div class="card bg-light border-0">
            <div class="card-body">
              <% if @profile.bio.present? %>
                <%= simple_format(@profile.bio) %>
              <% else %>
                <p class="text-muted mb-0">No bio provided.</p>
              <% end %>
            </div>
          </div>
        </div>

        <div class="stats-section">
          <h3 class="h5 mb-3">Activity</h3>
          <div class="row g-3">
            <div class="col-sm-6 col-md-4">
              <div class="card text-center h-100">
                <div class="card-body">
                  <i class="fas fa-file-alt fa-2x text-primary mb-2"></i>
                  <h5 class="stat-value"><%= @user.posts.count %></h5>
                  <p class="stat-label text-muted small mb-0">Posts</p>
                </div>
              </div>
            </div>
            <div class="col-sm-6 col-md-4">
              <div class="card text-center h-100">
                <div class="card-body">
                  <i class="fas fa-comments fa-2x text-primary mb-2"></i>
                  <h5 class="stat-value"><%= @user.comments.count %></h5>
                  <p class="stat-label text-muted small mb-0">Comments</p>
                </div>
              </div>
            </div>
            <div class="col-sm-6 col-md-4">
              <div class="card text-center h-100">
                <div class="card-body">
                  <i class="fas fa-tag fa-2x text-primary mb-2"></i>
                  <h5 class="stat-value"><%= @user.posts.map(&:categories).flatten.uniq.count %></h5>
                  <p class="stat-label text-muted small mb-0">Categories</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>