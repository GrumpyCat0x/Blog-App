<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow border-0 rounded-3">
      <div class="card-header bg-gradient text-white text-center py-3">
        <h1 class="card-title h4 mb-0">Log in to SimpleBlog</h1>
      </div>
      <div class="card-body p-4">
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
          <div class="form-floating mb-3">
            <%= f.email_field :email, class: 'form-control', placeholder: "Email", id: "floatingEmail" %>
            <%= f.label :email, for: "floatingEmail" %>
          </div>

          <div class="form-floating mb-3">
            <%= f.password_field :password, class: 'form-control', placeholder: "Password", id: "floatingPassword" %>
            <%= f.label :password, for: "floatingPassword" %>
          </div>

          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: 'form-check-input', id: "rememberCheck" %>
            <%= f.label :remember_me, class: 'form-check-label', for: "rememberCheck" %>
          </div>

          <%= f.submit "Log in", class: "btn btn-primary w-100 py-2 mb-3" %>
        <% end %>

        <div class="text-center">
          <p class="mb-0">New user? <%= link_to "Sign up now!", signup_path, class: "fw-semibold" %></p>
        </div>
      </div>
    </div>
  </div>
</div>