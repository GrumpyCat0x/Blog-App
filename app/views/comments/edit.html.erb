<div class="card">
  <div class="card-header">
    <h1 class="card-title">Edit Comment</h1>
  </div>
  <div class="card-body">
    <%= form_with(model: [@post, @comment], local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, rows: 5, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "Update Comment", class: "btn btn-primary" %>
        <%= link_to "Cancel", post_path(@post), class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>