<div class="card mb-3">
  <div class="card-header d-flex justify-content-between align-items-center">
    <span>
      <%= link_to comment.user.username, user_path(comment.user) %>
      <small class="text-muted"><%= time_ago_in_words(comment.created_at) %> ago</small>
    </span>

    <% if current_user?(comment.user) || current_user&.admin? %>
      <div class="btn-group btn-group-sm">
        <%= link_to "Edit", edit_post_comment_path(comment.post, comment), class: "btn btn-outline-secondary" %>
        <%= link_to "Delete", post_comment_path(comment.post, comment), method: :delete,
                    data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
      </div>
    <% end %>
  </div>

  <div class="card-body">
    <p class="card-text"><%= simple_format(comment.content) %></p>
  </div>
</div>